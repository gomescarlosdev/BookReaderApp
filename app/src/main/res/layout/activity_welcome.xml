<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/dw_welcome_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <TextView
        android:id="@+id/text_epub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ePub"
        android:textSize="64sp"
        android:fontFamily="@font/coiny"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/text_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:textSize="48sp"
        android:fontFamily="@font/coiny"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/text_epub"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reader"
        android:textSize="48sp"
        android:fontFamily="@font/coiny"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/text_epub"
        app:layout_constraintStart_toEndOf="@+id/text_book"
        android:gravity="start"
        android:layout_marginStart="8dp"
        />


    <ImageView
        android:id="@+id/img_book_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_book_512"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_book_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="128dp"
        android:gravity="center"
        android:fontFamily="@font/boogaloo"
        android:layout_margin="24dp"
        android:textColor="?attr/colorPrimary"
        android:text="@string/on_the_epub_book_reader_app_you_have_access"
        />

    <Button
        android:id="@+id/button_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_started"
        android:fontFamily="@font/coiny"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="22sp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>